{
  "mode": "All",
  "policyRule": {
    "if": {
      "anyOf": [
        {
          "allOf": [
            {
              "field": "type",
              "in": "[parameters('listofResource')]"
            },
            {
              "not": {
                "field": "[concat('tags[', parameters('tagValue'), ']')]",
                "in": "[parameters('listofallowedtagValues')]"
              }
            },
            {
              "field": "[concat('tags[', parameters('tagName'), ']')]",
              "equals": "Environment"
            }
          ]
        },

        {
          "allOf": [
            {
              "field": "type",
              "in": "[parameters('listofResource')]"
            },
            {
              "not": {
                "field": "[concat('tags[', parameters('tagName'), ']')]",
                "equals": "Environment"
              }
            }
          ]
        }



			]
    },
    "then": {
      "effect": "deny"
    }
  },
  "parameters": {
    "tagName": {
      "type": "String",
      "metadata": {
        "displayName": "Tag Name",
        "description": "Name of the tag, such as 'Finance'"
      }
    },
    "listofallowedtagValues": {
      "type": "Array",
      "metadata": {
        "displayName": "Tag Values",
        "description": "Value of the tag, such as 'Sales'"
      },
      "allowedValues": [
        "Finance",
        "HR",
        "Supply",
        "Sales"
      ]
    },
    "listofResource": {
      "type": "Array",
      "metadata": {
        "displayName": "Resources",
        "description": "Resources to which enforce this rule'"
      },
      "allowedValues": [
        "Microsoft.Sql/servers/databases",
        "Microsoft.Synapse/workspaces",
        "Microsoft.Databricks/workspaces",
        "Microsoft.DataFactory/factories",
        "Microsoft.Network/dnsZones",
        "missingRes"
      ],
      "defaultValue": [ "missingRes"]
    },
    "tagValue": {
      "type": "String",
      "metadata": {
        "displayName": "Tag Name",
        "description": "Name of the tag, such as 'finance'"
      },
      "defaultValue": "missingBU"
    }
  }
}
