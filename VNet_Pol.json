{
  "mode": "All",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Network/virtualNetworks"
        },
        {
          "anyOf": [
            {
              "field": "[concat('tags[', parameters('tagName'),  ']')]",
              "exists": "false"
            },
            {
              "field": "[concat('tags[', parameters('tagName2'),  ']')]",
              "exists": "false"
            },
            {
              "field": "[concat('tags[', parameters('tagName3'),  ']')]",
              "exists": "false"
            },
            {
              "field": "[concat('tags[', parameters('tagName4'),  ']')]",
              "exists": "false"
            },
            {
              "field": "[concat('tags[', parameters('tagName'),  ']')]",
              "equals": ""
            },
            {
              "field": "[concat('tags[', parameters('tagName2'),  ']')]",
              "notIn": [
                "Confidential",
                "Public"
              ]
            },
            {
              "field": "[concat('tags[', parameters('tagName3'),  ']')]",
              "equals": ""
            },
            {
              "field": "[concat('tags[', parameters('tagName4'),  ']')]",
              "notMatch": "#####"
            }
          ]
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  },
  "parameters": {
    "tagName": {
      "type": "String",
      "metadata": {
        "displayName": "ApplicationName Tag",
        "description": "Name of tag 1, such as 'ApplicationName'"
      },
      "allowedValues": [
        "ApplicationName"
      ],
      "defaultValue": "ApplicationName"
    },
    "tagName2": {
      "type": "String",
      "metadata": {
        "displayName": "DataClassification Tag",
        "description": "Name of tag 2, such as 'DataClassification'"
      },
      "allowedValues": [
        "DataClassification"
      ],
      "defaultValue": "DataClassification"
    },
    "tagName3": {
      "type": "String",
      "metadata": {
        "displayName": "ApproverName Tag",
        "description": "Name of tag 3, such as 'ApproverName'"
      },
      "allowedValues": [
        "ApproverName"
      ],
      "defaultValue": "ApproverName"
    },
    "tagName4": {
      "type": "String",
      "metadata": {
        "displayName": "CostCenter Tag",
        "description": "Name of tag 4, such as 'CostCenter'"
      },
      "allowedValues": [
        "CostCenter"
      ],
      "defaultValue": "CostCenter"
    }
  }
}
