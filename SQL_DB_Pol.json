{
  "mode": "All",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Sql/servers"
        },
        {
          "anyOf": [
            {
              "field": "[concat('tags[', parameters('tagName'),  ']')]",
              "exists": "false"
            },
            {
              "field": "[concat('tags[', parameters('tagName2'),  ']')]",
              "exists": "false"
            },
            {
              "field": "[concat('tags[', parameters('tagName3'),  ']')]",
              "exists": "false"
            },
            {
              "field": "[concat('tags[', parameters('tagName4'),  ']')]",
              "exists": "false"
            },
            {
              "field": "[concat('tags[', parameters('tagName'),  ']')]",
              "equals": ""
            },
            {
              "field": "[concat('tags[', parameters('tagName2'),  ']')]",
              "notMatch": "####-##-##"
            },
            {
              "field": "[concat('tags[', parameters('tagName3'),  ']')]",
              "notIn": [
                "Dev",
                "Prod",
                "UAT"
              ]
            },
            {
              "field": "[concat('tags[', parameters('tagName4'),  ']')]",
              "notIn": [
                "Finance",
                "HR",
                "Supply",
                "Sales"
              ]
            }
          ]
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  },
  "parameters": {
    "tagName": {
      "type": "String",
      "metadata": {
        "displayName": "ApplicationName Tag",
        "description": "Name of first tag, such as 'ApplicationName'"
      },
      "allowedValues": [
        "ApplicationName"
      ],
      "defaultValue": "ApplicationName"
    },
    "tagName2": {
      "type": "String",
      "metadata": {
        "displayName": "StartDate Tag",
        "description": "Name of second tag, such as 'StartDate'"
      },
      "allowedValues": [
        "StartDate"
      ],
      "defaultValue": "StartDate"
    },
    "tagName3": {
      "type": "String",
      "metadata": {
        "displayName": "Environment Tag",
        "description": "Name of second tag, such as 'Environment'"
      },
      "allowedValues": [
        "Environment"
      ],
      "defaultValue": "Environment"
    },
    "tagName4": {
      "type": "String",
      "metadata": {
        "displayName": "BusinessUnit Tag",
        "description": "Name of second tag, such as 'BusinessUnit'"
      },
      "allowedValues": [
        "BusinessUnit"
      ],
      "defaultValue": "BusinessUnit"
    }
  }
}
